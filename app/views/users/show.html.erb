<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>
 <% if posts? @user%>
 <h2>Posts</h2>
 <%= render @user.posts %>
 <% else%>
 <h2>No Posts</h2>
 <% end %>
 <% if comments? @user%>
 <h2>Comments</h2>
 <%= render @user.comments %>
 <% else %>
 <h2>No Comments</h2>
 <% end %>
 
 <h2> Favorites </h2>
 
 <% @user.favorites.each do |fav|  %>
 <ul>
 <li><%= render fav.post %><%= image_tag avatar_url, class: 'media-object' %> </li>
 </ul>
 <% end %>
 
 
 
 
 
 